{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "Node16",
    "target": "ES2019",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node16",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "types": ["obsidian"] // 添加 obsidian 类型定义
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ]
}
