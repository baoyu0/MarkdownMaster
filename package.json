{
  "name": "markdown-master",
  "version": "1.3.1",
  "description": "Markdown Master 是一个为 Obsidian 设计的插件，旨在提供一键式 Markdown 文件格式化功能。",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node scripts/version-bump.mjs",
    "package": "node scripts/package.mjs",
    "release": "node scripts/release.mjs"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "markdown",
    "formatter"
  ],
  "author": "dandan",
  "license": "MIT",
  "dependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/jspdf": "^1.3.3",
    "@types/marked": "^5.0.2",
    "diff": "^5.1.0",
    "file-saver": "^2.0.5",
    "jspdf": "^2.5.2",
    "marked": "^14.1.2",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.2",
    "@types/jest": "^29.5.13",
    "adm-zip": "^0.5.16",
    "builtin-modules": "^3.2.0",
    "esbuild": "^0.14.47",
    "jest": "^29.7.0",
    "obsidian": "latest",
    "ts-jest": "^29.1.1",
    "typescript": "4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "minAppVersion": "0.15.0"
}
